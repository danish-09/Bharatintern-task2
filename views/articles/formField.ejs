<div class="form-grp">
    <label for="title">Title</label>
    <input type="text" value="<%=article.title%>" name="title" class="form-control" required >

    <label for="description">description</label>
    <textarea type="text" name="description" id="description" class="form-control"><%=article.description%></textarea>

    <label for="markdown">markdown</label>
    <textarea type="text" name="markdown" id="markdown" class="form-control" required><%=article.markdown%></textarea>

    <button type="submit" class="btn btn-outline-success">Save</button>
    <a href="/" class="btn btn-outline-dark">Cancel</a>

</div>